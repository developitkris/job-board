<h1>Job Board</h1>
<form action="/jobs" method="post">

  <label for="new-title">Title:</label>
  <input id="new-title" name="new-title" type="text">
  <br>
  <label for="new-description">Job Description:</label>
  <input id="new-description" name="new-description" type="text">
  <br>
  <label for="new-contactName">Contact Name:</label>
  <input id="new-contactName" name="new-contactName" type="text">
  <br>
  <label for="new-contactEmail">Contact Email:</label>
  <input id="new-contactEmail" name="new-contactEmail" type="text">
  <br>
  <label for="new-contactPhone">Contact Phone:</label>
  <input id="new-contactPhone" name="new-contactPhone" type="text">

  <button type="submit">Submit</button>
</form>
