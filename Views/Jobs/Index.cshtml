<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Hello friend!</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <h1>Job Board</h1>
<ul>
  @{var jobNumber = 0;}
  @foreach(var jobOpening in Model)
  {
  jobNumber++;
  <li>Job Number @jobNumber<br>
  @jobOpening.GetTitle()<br>
  @jobOpening.GetDescription()<br>
  @jobOpening.GetContact().GetContactInfo()</li>
  <hr>
  }
</ul>
<p><a href="/jobs/new">Add another job.</a></p>

<form action="/jobs/delete" method="post">
  <button type="submit" name="button">Clear All jobs from the List</button>
</form>
  </body>
</html>
